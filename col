<!DOCTYPE html>
<html lang="getElementById">
<head>
    <title>perm</title>
</head>
<body>
    <script>
        let col = localStorage.getItem("usecol");
        if (!col) {
            col = "#" + Math.floor(Math.random()*16777215).toString(16).padStart(6, '0');
            localStorage.setItem("usecol", col);
        }
        document.body.style.backgroundColor = col;
    </script>
</body>
</html>
